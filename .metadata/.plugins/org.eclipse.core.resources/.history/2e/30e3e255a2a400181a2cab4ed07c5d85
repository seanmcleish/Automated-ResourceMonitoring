package de.tub.qds.rm.models.values.pks;

import java.io.Serializable;
import java.util.Date;

import javax.persistence.Embeddable;
import javax.persistence.ManyToOne;

import com.fasterxml.jackson.annotation.JsonIgnore;

import de.tub.qds.rm.models.consts.FileSystem;

@Embeddable
public class FileSystemValuePK implements Serializable {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	@ManyToOne(targetEntity = FileSystem.class)
	FileSystem fileSystemValueFileSystem;
	int fileSystemValueMeasurementId;
	Date fileSystemValueTimestamp;

	public FileSystemValuePK() {
	}

	public FileSystemValuePK(int measurement, Date timestamp) {
		super();
		this.fileSystemValueMeasurementId = measurement;
		this.fileSystemValueTimestamp = timestamp;
	}

	@JsonIgnore
	public FileSystem getFileSystemValueFileSystem() {
		return fileSystemValueFileSystem;
	}

	public void setFileSystemValueFileSystem(FileSystem fileSystemValueFileSystem) {
		this.fileSystemValueFileSystem = fileSystemValueFileSystem;
	}

	public int getFileSystemValueMeasurementId() {
		return fileSystemValueMeasurementId;
	}

	public void setFileSystemValueMeasurementId(int fileSystemValueMeasurementId) {
		this.fileSystemValueMeasurementId = fileSystemValueMeasurementId;
	}

	public Date getFileSystemValueTimestamp() {
		return fileSystemValueTimestamp;
	}

	public void setFileSystemValueTimestamp(Date fileSystemValueTimestamp) {
		this.fileSystemValueTimestamp = fileSystemValueTimestamp;
	}

	public static long getSerialversionuid() {
		return serialVersionUID;
	}

}
