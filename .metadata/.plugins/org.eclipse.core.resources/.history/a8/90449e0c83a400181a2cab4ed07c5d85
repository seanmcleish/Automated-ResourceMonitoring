package de.tub.qds.rm.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import de.tub.qds.rm.models.consts.Process;
import de.tub.qds.rm.models.consts.repos.MemoryRepo;
import de.tub.qds.rm.models.consts.repos.ProcessRepo;

@RestController
public class ProcessController {
	

	@Autowired
	ProcessRepo repo;

	@RequestMapping(method = RequestMethod.GET, path = "/process", produces = "application/json")
	public List<Process> getMemories() {
		return repo.findAll();
	}
	
	@RequestMapping(method = RequestMethod.GET, path = "/process/{memoryTotalSpace}", produces = "application/json")
	public Memory getMemoryByTotalSpace(@PathVariable("memoryTotalSpace") long memoryTotalSpace) {
		return repo.existsById(memoryTotalSpace) ? repo.findById(memoryTotalSpace).get() : null;
	}

}
